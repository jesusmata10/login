<%- include('plantilla/head.ejs');%>
<%- include('plantilla/navbar.ejs'); %>
<div class="container-fluid">
    <div class="row">
        <%- include('plantilla/sidebarMenu.ejs'); %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 p-0">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center p-3 mb-3 border-bottom">
                <h1 class="h2">Dashboard de Actualizar</h1>
            </div>
            <!-- Body-->
            
            <main role="main" class="container">
                <div class="row">
                    <% if( user ) { %>
                                        
                    <div class="col-8 offset-2">
                        <div class="card">
                        	<div class=" bg-primary">
                        		<h3 class="card-title px-3 pt-1">Actualizar</h3>
                        	</div>
                            
                            <div class="card-body">
                                <form action="/save" method="POST" >
                                <input id="id" name="id" value="" hidden>
                                    <div class="row">
                                        <div class="form-group col-sm-12 col-md-6">
                                            <label for="usuario">Usuarios:</label>
                                            <input type="text" class="form-control" id="usuario" value=" <%= user.user %>" name="usuario" aria-describedby="usuarioHelp">
                                        </div>
                                        <div class="form-group col-sm-12 col-md-6">
                                            <label for="email">Email:</label>
                                            <input type="email" class="form-control" id="email" value="<%= user.email %>" name="email" aria-describedby="emailHelp">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm-12 col-md-6">
                                           <label for="rol">Rol:</label>
										      <select id="inputState" class="form-control" name="rol">
										        <option selected>Seleccione...</option>
										        <option <%= user.rol == 'usuario' ? "selected": "" %> value="usuario">Usuario</option>
										        <option <%= user.rol == 'Administrador' ? "selected": "" %> value="Administrador">Administrador</option>
										        <option <%= user.rol == 'Visitante' ? "selected": "" %> value="Visitante">Visitante</option>
										      </select>
                                        </div>
                                       
                                        <div class="form-group col-sm-12 col-md-6">
                                            <label for="password">Password</label>
                                            <input type="password" class="form-control" id="password" value="" name="password">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm-12 col-md-6">
                                            <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                                            
                                        </div>
                                        <div class="form-group col-sm-12 col-md-6">
                                            <a class="btn btn-light btn-block" href="/show">Cancelar</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </main>
            
        </main>
    </div>
</div>
<br>
<%- include('plantilla/footer'); %>
<%- include('plantilla/scripts.ejs'); %>
</body>

</html>
